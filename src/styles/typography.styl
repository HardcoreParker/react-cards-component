// Stolen from @Cloudsaid - reportedly won't need more than this to start

html, body {
  font-family: $basefontfamily;
  font-weight: 300;
  font-size: $basefontsize;
}
h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6 {
  margin : 0;
  padding: 0;
  font-family : $baseheadingfont;
  font-weight : $baseheadingfontweight;
  color : $baseheadingfontcolor;
  text-rendering : auto;

  &.page-header{
    margin-bottom: 1rem;
    margin-left: -$gutterwidth;
    border-bottom: $borderwidth $borderstyle $bordercolor;
  }
}

a {
  color: $lightbluelinkcolor;
  text-decoration: none;
  &:hover {
    color: #045680;
  }
  &:active {
    transform: scale(1.1);
    transition: all 200ms;
  }
  &.light-blue{
    color: $lightbluelinkcolor;
  }
  &.light{
    color: $lightneutralcolor;
  }
  &.light-blue, &.light {
    &:hover {
      color: $lightlinkcolorhover;
    }
  }
  &.link-grey {
    color: $midneutralcolor;
  }
  &.link-white {
    color: $white;
  }
  &.link-internal {
    text-decoration: underline;
  }
}

h1,
.h1 {
  @include font-size($basefontsize * 1.8);
  line-height: 1.2;
  margin-top: $baselineheight / 2;
}

h2,
.h2 {
@include font-size($basefontsize * 1.6);
line-height: 1.2;
margin-top: $baselineheight / 2; }

h3,
.h3 {
@include font-size($basefontsize * 1.4);
line-height: 1.3;
margin-top: 0.5em; }

h4,
.h4 {
@include font-size($basefontsize * 1.25);
line-height: 1.25;
margin-top: 0.5em;}

h5,
.h5 {
  font-size: 1.75em;
  line-height: 1.3;
  margin-top: 0.5em;
}

h6,
.h6 {
@include font-size($basefontsize * 0.8);
margin-top: $baselineheight;
font-weight : normal;
letter-spacing : 1px;
text-transform : uppercase; }

p {
  font-size: 1em;
  line-height: 1.5em;
  margin-top: 1.5em;
  &:first-of-type {
    margin-top: 1em;
  }
}
